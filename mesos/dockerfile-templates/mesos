FROM ubuntu:trusty
MAINTAINER Mesosphere <support@mesosphere.io>

RUN apt-get update && \
  apt-get -y install wget apt-transport-https ca-certificates && \
  apt-key adv --keyserver keyserver.ubuntu.com --recv DF7D54CBE56151BF && \
  echo deb https://apt.dockerproject.org/repo ubuntu-trusty main > /etc/apt/sources.list.d/docker.list && \
  apt-get update && \
  apt-get -y install curl docker-engine

RUN echo "deb http://repos.mesosphere.io/ubuntu/ trusty{UBUNTU_TESTING} main" > /etc/apt/sources.list.d/mesosphere.list && \
  apt-key adv --keyserver keyserver.ubuntu.com --recv E56151BF && \
  apt-get -y update && \
  apt-get -y install mesos={VERSION} && \
  apt-get clean && rm -rf /var/lib/apt/lists/*
